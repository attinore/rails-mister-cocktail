<div class="window" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1530064161350-7824b8cdeee9?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2100&q=80)";>    <div class="display">

<div class="left-window display container-lg col-6">
  <h2>Add your favorites</h2>
    <div class="cocktail-input-box container col-8 mt-5">
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
      <%= f.input :description %>
      <%= f.submit "Add", class: "btn btn-success mt-10" %>
    <% end %>
    </div>
</div>
